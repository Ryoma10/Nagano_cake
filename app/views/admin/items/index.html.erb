<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-12 px-0 mx-auto">
      <h4>商品一覧</h4>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                <%= item.id %>
              </td>
              <td>
                <%= link_to item.name, admin_item_path(item.id) %>
              </td>
              <td>
                <%= item.price %>
              </td>
              <td>
                <%= item.genre.name %>
              </td>
              <td>
                <% if item.is_active %>
                  <p class="text-success font-weight-bold">販売中</p>
                <% else %>
                  <p class="text-danger font-weight-bold">売切れ</p>
                <% end %>
              <td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>