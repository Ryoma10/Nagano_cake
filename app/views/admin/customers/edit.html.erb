<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-9 px-0 mt-3">
      <h4 class="m-3"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
        <table class="table table-borderless ml-5">
        <tr>
          <th>会員ID</th>
          <th></th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>名前</th>
          <th>(姓)</th>
          <th class="field">
            <%= f.text_field :last_name %>
            <%= f.label "(名)", class: "ml-5" %>
            <%= f.text_field :first_name, class: "ml-3" %>
          </th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th>(セイ)</th>
          <th class="field">
            <%= f.text_field :last_name_kana %>
            <%= f.label "(メイ)", class: "ml-5" %>
            <%= f.text_field :first_name_kana %>
          </th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th></th>
          <th class="field">
            <%= f.text_field :postal_code %>
          </th>
        </tr>
        <tr>
          <th>住所</th>
          <th></th>
          <th class="field">
            <%= f.text_field :address, size: 60 %>
          </th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th></th>
          <th class="field">
            <%= f.text_field :telephone_number %>
          </th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th></th>
          <th class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th></th>
          <th class="is_active">
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, '有効', value: true, class: "mr-5" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, '退会', value: false %>
          </th>
        </tr>
        <tr>
          <th></th>
          <th></th>
          <th class="form-group col-4 mx-auto">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
          </th>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>