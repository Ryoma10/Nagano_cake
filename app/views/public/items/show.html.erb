<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-3 px-0">
      <h4 class="text-center">商品詳細</h4>
      <%= image_tag @item.image.variant( resize: "250" ) %>
    </div>
    <div class="col-6 px-0 mt-5 mx-auto">
      <h4><%= @item.name %></h4>
      <h5><%= safe_join(@item.introduction.split("\n"),tag(:br)) %></h5>
      <div class="font-weight-bold">
        ￥<%= @item.add_tax_price.to_s(:dalimited) %>
        <div class="font-small">
          (税込)
        </div>
      </div>
      <div>
        <% if @item.is_active %>
          <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
            <%= f.number_field :age, autocomplete: "off" %>
          <% end %>
        <% else %>
          <p class="text-danger font-weight-bold">売切れ</p>
        <% end %>
      </div>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active %>
              <p class="text-success font-weight-bold">販売中</p>
              
            <% else %>
              <p class="text-danger font-weight-bold">売切れ</p>
            <% end %>
          <td>
        </tr>
      </table>
      <div class="col-4 mx-auto">
        <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>