<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-9 px-0 mt-3">
      <h4 class="m-3">新規会員登録</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
      <table class="table table-borderless ml-5">
        <tr>
          <th>名前</th>
          <th>(姓)</th>
          <th class="field">
            <%= f.text_field :last_name %>
            <%= f.label "(名)", class: "ml-5" %>
            <%= f.text_field :first_name, class: "ml-3" %>
          </th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th>(セイ)</th>
          <th class="field">
            <%= f.text_field :last_name_kana %>
            <%= f.label "(メイ)", class: "ml-5" %>
            <%= f.text_field :first_name_kana %>
          </th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th></th>
          <th class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </th>
        </tr>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <th></th>
          <th class="field">
            <%= f.text_field :postal_code %>
          </th>
        </tr>
        <tr>
          <th>住所</th>
          <th></th>
          <th class="field">
            <%= f.text_field :address, size: 60 %>
          </th>
        </tr>
        <tr>
          <th>電話番号(ハイフンなし)</th>
          <th></th>
          <th class="field">
            <%= f.text_field :telephone_number %>
          </th>
        </tr>
        <tr>
          <th>パスワード(6文字以上)</th>
          <th></th>
          <th class="field">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </th>
        </tr>
        <tr>
          <th>パスワード(確認用)</th>
          <th></th>
          <th class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </th>
        </tr>
        <tr>
          <th></th>
          <th></th>
          <th class="action sd-grid gap-2">
            <%= f.submit '新規登録', class: "btn btn-success", style: "width: 189px;" %>
          </th>
        </tr>
      </table>
      <% end %>
      <h4 class="m-3">既に登録済みの方</h4>
      <p class="ml-5"><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
    </div>
  </div>
</div>