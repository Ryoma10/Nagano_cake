<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-9">
      <h4 class="m-3">配送先登録・一覧</h4>
      <%= form_with model: @address, url: address_path, method: :patch do |f| %>
        <table class="table table-borderless ml-5">
          <tr>
            <th>郵便番号</th>
            <th class="field">
              <%= f.text_field :postal_code %>
            </th>
          </tr>
          <tr>
            <th>住所</th>
            <th class="field">
              <%= f.text_field :address, size: 60 %>
            </th>
          </tr>
          <tr>
            <th>宛名</th>
            <th class="field">
              <%= f.text_field :name %>
            </th>
          </tr>
        </table>
        <%= f.submit '変更内容を保存', class: "btn btn-success mx-2" %>
      <% end %>
    </div>
  </div>
</div>